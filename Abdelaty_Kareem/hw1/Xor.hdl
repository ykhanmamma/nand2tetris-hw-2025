/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Not(in=a , out=c );
    Not(in=b , out=d );
    And(a=a, b=d , out=out1 );
    And(a=c , b=b , out=out2 );
    Or(a=out1 , b=out2 , out=out );

}
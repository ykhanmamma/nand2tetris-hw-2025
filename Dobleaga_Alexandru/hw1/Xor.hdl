/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Not(in = b, out = nb);
    And(a = a, b = nb, out = val1);
    Not(in = a, out = na);
    And(a = na, b = b, out = val2);
    Or(a = val1, b = val2, out = out);
}
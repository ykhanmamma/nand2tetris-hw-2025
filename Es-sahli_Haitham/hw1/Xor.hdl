/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Nand(a= a, b= b, out=nandab );
    Nand(a= a, b= nandab, out=nanda );
    Nand(a= b, b= nandab, out=nandb );
    Nand(a= nanda, b= nandb, out=out );
}
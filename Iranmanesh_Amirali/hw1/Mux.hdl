/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in= sel, out= ns);
    And(a= a, b= ns, out= t1);
    And(a= b, b= sel, out= t2);
    Or(a= t1, b= t2, out= out);
}
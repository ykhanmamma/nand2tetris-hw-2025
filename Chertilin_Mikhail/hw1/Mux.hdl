/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Nand(a=sel, b=sel, out=NOTsel);
    Nand(a=a, b=NOTsel, out=NOTselANDa);
    Nand(a=b, b=sel, out=selANDb);
    Nand(a=NOTselANDa, b=selANDb, out=out);
}
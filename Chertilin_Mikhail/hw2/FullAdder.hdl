/**
 * Computes the sum of three bits.
 */
CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    HalfAdder(a=a,b=b,sum=ab,carry=abc);
    HalfAdder(a=c,b=ab,sum=sum,carry=car);
    Or(a=abc,b=car,out=carry);
}